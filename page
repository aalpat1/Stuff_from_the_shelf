    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript">
        
      
            
            var windowH = $(window).height(),
                documElem = $(document),
                landingPage = $('.landingPage'),
                article = $('.article'),
                articleContent= $('#articleContent'),
                Headline= $('#Headline'),
                albumCover= $('#albumCover'),
                playlist= $('#playlist'),
                btns = $('.btn'),
                infoboxW= $('#infobox').width()
                animSpeed = 500;
                var currentPlaylist = $('#article1plalyst');
                var currentInfobox = $('#infobx1');
                var foldBarHidden= false;
    
                

            var article1Headline= "An Argument With Myself",
                article2Headline= "Like You Mean It";
            landingPage.css({
                height: windowH + 'px',
                top: 0 + 'px'
            });

            article.css({
                top: windowH + 'px',
            });
            function hidePlaylist() {
                        currentPlaylist.css('visibility','hidden');
            }
           
           $('#article1').on('click', function(e) {
                    currentPlaylist.css('visibility','hidden');
                    currentInfobox.css('visibility', 'hidden');
                    currentInfobox = $('#infobox1');
                    currentPlaylist= $('#article1playlist');
                    currentPlaylist.css('visibility','visible');
                    currentInfobox.css('visibility','visible');
                    Headline.html(article1Headline);
                    albumCover.load("Assets/Art/article1image.html");
                    articleContent.load("Assets/articleText/article1.html");
                    landingPage.animate({'top': -windowH + 'px'}, {duration: animSpeed, queue: false});
                    article.animate({'top': 0},{duration: animSpeed, queue: false} );
                    $(".infobox").animate({left: 0}, 500);
                    $(".playlistWrapper").animate({right: '20px'}, 500);
                    
                    
           });
           $('#article2').on('click', function(e) {
                    //playlist.load("Assets/Multimedia/article2playlist.html");
                    currentPlaylist.css('visibility','visible');
                    currentInfobox.css('visibility', 'hidden');
                    currentPlaylist= $('#article2playlist');
                    currentInfobox = $('#infobox2');
                    currentPlaylist.css('visibility','visible');
                    currentInfobox.css('visibility','visible');
                    Headline.html(article2Headline);
                    albumCover.load("Assets/Art/article2image.html");
                    articleContent.load("Assets/articleText/article2.html");
                    landingPage.animate({'top': -windowH + 'px'}, {duration: animSpeed, queue: false});
                    article.animate({'top': 0},{duration: animSpeed, queue: false} );
                    $(".infobox").animate({left: 0}, 500);
                    $(".playlistWrapper").animate({right: '20px'}, 500);
                    
           });
        $('.foldBar').on('click', function(e) {
                if ( foldBarHidden == false ) {
                    $('.playlistWrapper').animate({width: '20px'},{duration:500});
                    $('.playlistEmbed2').animate({width: '0px'},{duration: 500});
                    
                    foldBarHidden= true;
                }
                else{
                    $('.playlistWrapper').animate({width: '240px'},{queue: true, duration:500});
                     $('.playlistEmbed2').animate({height: '300px'},{queue: true, duration: 500});
                    $('.playlistEmbed2').animate({width: '220px'},{queue: true, duration: 500});
                      
                    foldBarHidden= false;

                }
                e.preventDefault();
            });


        btns.on('click', function(e) {
                if ( $(this).hasClass('open') ) {
                    article.animate({'top': windowH + 'px'}, {duration: animSpeed, queue: false});
                    landingPage.animate({'top': 0}, {duration: animSpeed, queue: false});
                    $(".infobox").animate({left: '-200px'},{duration: 500});
                    $(".playlistWrapper").animate({right: '-240px'},{duration: 500});
                    if (foldBarHidden == true) {
                    $('.playlistWrapper').animate({width: '240px'},{queue: true, duration:500});
                     $('.playlistEmbed2').animate({height: '300px'},{queue: true, duration: 500});
                    $('.playlistEmbed2').animate({width: '220px'},{queue: true, duration: 500});

                    foldBarHidden= false;

                }
                }
                e.preventDefault();
            });
        
    </script>
    </body>
